pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }

        stage('built and run') {
            steps {
                sh 'docker build -t finalwebsite .'
                sh 'docker stop website || true && docker rm website || true'
                sh 'docker run --name website -d -p 8081:80 finalwebsite'
            }
       
        }

        stage('testing'){
            steps {
                sh 'curl -I localhost:8081'
            }

        }
        stage('Tag and Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-auth', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')])
                {
                    script {
                        def buildId = env.BUILD_ID
                        sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD"
                        sh "docker tag finalwebsite utkersh277/2244_ica2:latest"
                        sh "docker tag finalwebsite utkersh277/2244_ica2:develop-${env.BUILD_ID}"
                        sh "docker push utkersh277/2244_ica2:latest"
                        sh "docker push utkersh277/2244_ica2:develop-$buildId"}  
                }    
            }
        }
    }
}

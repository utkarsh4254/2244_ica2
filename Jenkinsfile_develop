pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }

        stage('built and run') {
            steps {
                sh 'docker build -t finalwebsite .'
                sh 'docker stop website || true && docker rm website || true'
                sh 'docker run --name website -d -p 8081:80 finalwebsite'        }
       
    }


        stage('testing'){
            steps {
                sh 'curl -I localhost:8081'
            }

        }

}             
